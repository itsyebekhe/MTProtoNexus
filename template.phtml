    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const grid = document.getElementById('proxy-grid');
            const searchInput = document.getElementById('proxy-search');
            const resultCount = document.getElementById('result-count');
            const cards = Array.from(document.querySelectorAll('.proxy-card'));

            // 1. Search Logic
            searchInput.addEventListener('input', (e) => {
                const term = e.target.value.toLowerCase();
                let visible = 0;
                
                cards.forEach(card => {
                    const server = card.dataset.server.toLowerCase();
                    const port = card.dataset.port;
                    const match = server.includes(term) || port.includes(term);
                    
                    if(match) {
                        card.style.display = 'block';
                        visible++;
                    } else {
                        card.style.display = 'none';
                    }
                });
                resultCount.textContent = `Showing ${visible} proxies`;
            });

            // 2. Export All Online Logic
            document.getElementById('export-btn').addEventListener('click', () => {
                const onlineCards = document.querySelectorAll('.proxy-card.is-online');
                let exportText = "";
                onlineCards.forEach(card => {
                    exportText += card.dataset.url + "\n";
                });
                
                if(!exportText) return alert('No online proxies to export!');
                
                navigator.clipboard.writeText(exportText).then(() => {
                    const btn = document.getElementById('export-btn');
                    const originalHTML = btn.innerHTML;
                    btn.innerHTML = `<span class="text-emerald-400 font-bold">Copied ${onlineCards.length} Proxies!</span>`;
                    setTimeout(() => btn.innerHTML = originalHTML, 2000);
                });
            });

            // 3. Time Ago Logic
            const timeElement = document.getElementById('time-ago');
            const timestamp = parseInt(timeElement.dataset.timestamp) * 1000;
            
            function updateTime() {
                const seconds = Math.floor((new Date() - timestamp) / 1000);
                let interval = seconds / 31536000;
                if (interval > 1) return timeElement.innerText = Math.floor(interval) + " years ago";
                interval = seconds / 2592000;
                if (interval > 1) return timeElement.innerText = Math.floor(interval) + " months ago";
                interval = seconds / 86400;
                if (interval > 1) return timeElement.innerText = Math.floor(interval) + " days ago";
                interval = seconds / 3600;
                if (interval > 1) return timeElement.innerText = Math.floor(interval) + " hours ago";
                interval = seconds / 60;
                if (interval > 1) return timeElement.innerText = Math.floor(interval) + " mins ago";
                return timeElement.innerText = "just now";
            }
            updateTime();
            setInterval(updateTime, 60000);

            // 4. Copy & QR Interactions
            grid.addEventListener('click', (e) => {
                if (e.target.closest('.copy-btn')) {
                    const btn = e.target.closest('.copy-btn');
                    const url = btn.closest('.proxy-card').dataset.url;
                    navigator.clipboard.writeText(url);
                    btn.innerHTML = `<svg class="w-4 h-4 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>`;
                    setTimeout(() => btn.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>`, 1500);
                }
            });

            // Modal Logic
            const modal = document.getElementById('qr-modal');
            const qrContainer = document.getElementById('qrcode');
            
            grid.addEventListener('click', (e) => {
                if (e.target.closest('.qr-btn')) {
                    const url = e.target.closest('.proxy-card').dataset.url;
                    qrContainer.innerHTML = '';
                    new QRCode(qrContainer, { text: url, width: 220, height: 220 });
                    modal.classList.remove('opacity-0', 'pointer-events-none');
                    modal.querySelector('.modal-content').classList.remove('scale-95');
                }
            });

            document.getElementById('close-modal').onclick = () => {
                modal.classList.add('opacity-0', 'pointer-events-none');
                modal.querySelector('.modal-content').classList.add('scale-95');
            };
            modal.onclick = (e) => { if(e.target === modal) document.getElementById('close-modal').click(); }
        });
    </script>
