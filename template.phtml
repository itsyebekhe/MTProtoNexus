    <script>
        // --- Logic: Client Side Ping & Interactions ---
        document.addEventListener('DOMContentLoaded', () => {
            const grid = document.getElementById('proxy-grid');
            const clientCheckBtn = document.getElementById('client-check-btn');
            
            // 1. Copy Function
            grid.addEventListener('click', (e) => {
                if (e.target.closest('.copy-btn')) {
                    const btn = e.target.closest('.copy-btn');
                    const url = btn.closest('.proxy-card').dataset.url;
                    navigator.clipboard.writeText(url);
                    const originalText = btn.innerText;
                    btn.innerText = "Copied!";
                    btn.classList.add('text-emerald-400', 'border-emerald-500/50');
                    setTimeout(() => {
                        btn.innerText = originalText;
                        btn.classList.remove('text-emerald-400', 'border-emerald-500/50');
                    }, 1500);
                }
            });

            // 2. QR Code
            const modal = document.getElementById('qr-modal');
            const qrContainer = document.getElementById('qrcode');
            
            grid.addEventListener('click', (e) => {
                if (e.target.closest('.qr-btn')) {
                    const url = e.target.closest('.proxy-card').dataset.url;
                    qrContainer.innerHTML = '';
                    new QRCode(qrContainer, { text: url, width: 200, height: 200 });
                    modal.classList.remove('opacity-0', 'pointer-events-none');
                    modal.querySelector('.modal-content').classList.remove('scale-95');
                    modal.querySelector('.modal-content').classList.add('scale-100');
                }
            });

            const closeModal = () => {
                modal.classList.add('opacity-0', 'pointer-events-none');
                modal.querySelector('.modal-content').classList.add('scale-95');
                modal.querySelector('.modal-content').classList.remove('scale-100');
            }
            document.getElementById('close-modal').onclick = closeModal;
            modal.onclick = (e) => { if(e.target === modal) closeModal(); }

            // 3. Client Side Ping Logic
            clientCheckBtn.addEventListener('click', async () => {
                const onlineCards = Array.from(document.querySelectorAll('.proxy-card.is-online'));
                if(onlineCards.length === 0) return;

                clientCheckBtn.disabled = true;
                clientCheckBtn.innerHTML = `<svg class="animate-spin h-4 w-4 text-white" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Testing...`;

                for (const card of onlineCards) {
                    const server = card.dataset.server;
                    const port = card.dataset.port;
                    const badge = card.querySelector('.ping-badge');
                    
                    // Visual Loading state
                    if(badge) badge.innerHTML = '...';

                    const start = performance.now();
                    try {
                        // We use fetch with no-cors. It will fail (opaque), but the time it takes tells us the TCP handshake + TTFB
                        const controller = new AbortController();
                        const id = setTimeout(() => controller.abort(), 2000); // 2s timeout
                        await fetch(`http://${server}:${port}`, { 
                            mode: 'no-cors', 
                            signal: controller.signal,
                            cache: 'no-store'
                        });
                        clearTimeout(id);
                        const duration = Math.round(performance.now() - start);
                        if(badge) badge.innerHTML = `<span class="text-cyan-400 font-bold">${duration}</span>ms (Client)`;
                        card.dataset.clientLatency = duration;
                    } catch (e) {
                         if(badge) badge.innerHTML = `<span class="text-orange-400">Timeout</span>`;
                         card.dataset.clientLatency = 9999;
                    }
                }

                // Re-sort based on client latency
                const container = document.getElementById('proxy-grid');
                onlineCards.sort((a, b) => {
                    return (parseInt(a.dataset.clientLatency) || 9999) - (parseInt(b.dataset.clientLatency) || 9999);
                });
                
                // Append re-sorted cards (moves them visually)
                onlineCards.forEach(card => container.appendChild(card));

                clientCheckBtn.disabled = false;
                clientCheckBtn.innerHTML = 'Test Complete';
            });
        });
    </script>
